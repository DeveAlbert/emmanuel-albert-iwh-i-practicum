doctype html
html(lang="en")
    head
        title #{pageTitle}
        link(rel="stylesheet", href="/css/style.css")
    body
        a(href='/') Return to the homepage
        .form-wrapper
            strong Enter a Few Information About Your Favorite Book Below
            form(method="POST")
                label(for="book_title") Book Title:
                input(type="text" name="book_title" required)
                label(for="book_issn") Book ISSN:
                input(type="number" name="book_issn")
                label(for="book_genre") Book Genre:
                input(type="text" name="book_genre")
                label(for="book_author") Book Author:
                input(type="text" name="book_author")
                input(type="submit" value="Submit")